@{
    ViewData["Title"] = "Usuarios";
}

@model List<Proyecto.ViewModels.ListarUsuarioViewModel>
@if(TempData["Mensaje"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Mensaje"]
    </div>
}
<h1>@ViewData["Title"]</h1>

<div class="table-container">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <div class="action-buttons">
                    <th>
                        <a class="btn btn-success" asp-controller="Usuario" asp-action="AgregarUsuario">Agregar Usuario</a>
                    </th>
                    <th>
                        <a class="btn btn-info" asp-controller="Tablero" asp-action="Index" asp-route-idUsuario=null>Ver todos los Tableros (Administrador)</a>
                    </th>
                </div>
            </tr>
            <tr>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Nombre</td>
                    <td>
                        <div class="action-buttons">
                            <a class="btn btn-info" asp-controller="Tablero" asp-action="Index" asp-route-idUsuario="@usuario.Id">Ver Tableros</a>
                            <a class="btn btn-primary" asp-controller="Usuario" asp-action="EditarUsuario" asp-route-idUsuario="@usuario.Id">Editar</a>
                            <a class="btn btn-danger" asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-idUsuario="@usuario.Id" onclick="return confirm('¿Estás seguro que quieres eliminar el usuario?')">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {<partial name="_ValidationScriptsPartial" />}
