@{ 
    ViewData["Title"] = "Agregar Usuario";
}

@model Tp11.ViewModels.UsuarioViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Usuario" asp-action="AgregarUsuarioFromForm" method="post">
    <div class="form-group">
        <label asp-for="@Model.Id"></label>
        <input asp-for="@Model.Id" class="form-control" id="id" />
        <span asp-validation-for="@Model.Id" class="text-danger"></span>   
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" id="nombre" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>   
    </div>
    <div class="form-group">
        <label asp-for="@Model.Contrasenia"></label>
        <input asp-for="@Model.Contrasenia" class="form-control" id="contrasenia" />
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>   
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nivel"></label>
        <input asp-for="@Model.Nivel" class="form-control" id="nivel" />
        <span asp-validation-for="@Model.Nivel" class="text-danger"></span>   
    </div>
    <button type="submit" class="btn btn-primary" >Enviar</button>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }