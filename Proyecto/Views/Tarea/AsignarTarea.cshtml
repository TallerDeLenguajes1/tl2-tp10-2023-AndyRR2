@{ 
    ViewData["Title"] = "Asignar Tarea";
}

@model Proyecto.ViewModels.AsignarTareaViewModel

<h1>@ViewData["Title"]</h1>
<form asp-controller="Tarea" asp-action="AsignarTareaFromForm" method="post">
    <input hidden asp-for="@Model.Id">
    <div class="form-group" style="max-width: 200px;">
        <label asp-for="@Model.IdUsuarioAsignado"></label>
        <select asp-for="@Model.IdUsuarioAsignado" class="form-control">
            <option value="">Seleccionar Id</option>
            @foreach (var idUsuario in Model.IdUsuarios)
            {
                <option value="@idUsuario">@idUsuario</option>
            }
        </select>
        <span asp-validation-for="@Model.IdUsuarioAsignado" class="text-danger"></span>
    </div>
    <div class="form-group" style="margin-top: 10px;">
        <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }