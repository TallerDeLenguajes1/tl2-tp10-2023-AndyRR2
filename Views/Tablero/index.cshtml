@{
    ViewData["Title"] = "Tableros";
}

@model List<Tp11.ViewModels.TableroViewModel>

<h2>Tablero List</h2>

<table class="table table-dark">
    <thead>
            <tr>
                <a asp-controller="Tarea" asp-action="Index" asp-route-idTablero=null>Ver Tareas de todos los Tableros</a>
            </tr>
        <tr>
            <th hidden>ID</th>
            <th>IdUsuarioPropietario</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model)
        {
            <tr>
                <td hidden>@tablero.Id</td>
                <td>@tablero.IdUsuarioPropietario</td>
                <td>@tablero.Nombre</td>
                <td>@tablero.Descripcion</td>
                <td>
                    <a asp-controller="Tarea" asp-action="Index" asp-route-idTablero="@tablero.Id">Ver Tareas del Tablero</a>
                    <a asp-controller="Tablero" asp-action="EditarTablero" asp-route-idTablero="@tablero.Id">Editar</a>
                    <a asp-controller="Tablero" asp-action="EliminarTablero" asp-route-idTablero="@tablero.Id" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>                      
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <a asp-controller="Tablero" asp-action="AgregarTablero">Agregar Tablero</a>
        </tr>
    </tfoot>
</table>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }